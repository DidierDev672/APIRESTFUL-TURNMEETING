{
    "compilerOptions": {
        "module": "commonJS",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "outDir": "dist",
        "allowJs": false,
    },
    "lib": ["es2015"],
    "files.exclude":{
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules":true,
        "**/*js":{
            "when": "$(basename).ts"
        },
        "**/*.js.map":true
    }
}